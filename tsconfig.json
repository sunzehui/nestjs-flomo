{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    
    "paths":{ 
      "@user/*": ["src/user/*"],
      "@auth/*": ["src/auth/*"],
      "@utils/*": ["src/utils/*"],
    }
  }
}
